
    <%= form_for([:admin, @talent]) do |f| %>
        <% if @talent.errors.any? %>
<!--
        <div id="error_explanation"><h2>入力エラー</h2></div>
            <% @talent.errors.messages.each do |message| %><p class="error"><%= message %></p><% end %>
-->
        <% end %>

    <table width="0" border="0" cellspacing="0" cellpadding="0" class="input_detail">
        <tr>
            <th scope="row"><span>※</span>表示・非表示</th>
            <td>
                <div class="input radio">
                    <label for="display-flg-1"><%= f.radio_button :display_flg, true, {:checked => true, 'id' => 'display-flg-0'} %> 表示 </label>
                    <label for="display-flg-0"><%= f.radio_button :display_flg, false, id: 'display-flg-0' %> 非表示 </label>
                </div>
                <% @talent.errors.messages[:display_flg].each do |message| %><p class="error"><%= message %></p><% end %>
            </td>
        </tr>
        <tr>
            <th scope="row"><span>※</span>カテゴリ</th>
            <td>
                <%= f.select :category_id, @category_list.invert, {id: 'category-id', include_blank: ''} %>
                <% @talent.errors.messages[:category_id].each do |message| %><p class="error"><%= message %></p><% end %>
            </td>
        </tr>
        <tr>
            <th scope="row"><span>※</span>タレントID</th>
            <td>
                <div class="input text"><%= f.text_field :code, size: 50, id: 'code', class: 'wide' %></div>
                <% @talent.errors.messages[:code].each do |message| %><p class="error"><%= message %></p><% end %>
            </td>
        </tr>
        <tr>
            <th scope="row"><span>※</span>名前（漢字）</th>
            <td>
                <div class="input text"><%= f.text_field :name, size: 50, id: 'name', class: 'wide' %></div>
                <% @talent.errors.messages[:name].each do |message| %><p class="error"><%= message %></p><% end %>
            </td>
        </tr>
        <tr>
            <th scope="row"><span>※</span>名前（ふりがな）</th>
            <td>
                <div class="input text"><%= f.text_field :name_kana, size: 50, id: 'name_kana', class: 'wide' %></div>
                <% @talent.errors.messages[:name_kana].each do |message| %><p class="error"><%= message %></p><% end %>
            </td>
        </tr>
        <tr>
            <th scope="row"><span>※</span>名前（English）</th>
            <td>
                <div class="input text"><%= f.text_field :name_eng, size: 50, id: 'name_eng', class: 'wide' %></div>
                <% @talent.errors.messages[:name_eng].each do |message| %><p class="error"><%= message %></p><% end %>
            </td>
        </tr>
        <tr>
            <th scope="row"><span>※</span>誕生日</th>
            <td>
                <%= select_month @talent.birth_month, {use_month_numbers: true, include_blank: true}, {name: 'talent[birth_month]', id: "birth-month"} %>
                <label for="birth_month">月</label>
                <%= select_day @talent.birth_day, {include_blank: true}, {name: 'talent[birth_day]', id: "birth-day"} %>
                <label for="birth_day">日</label>
                  <% if @talent.errors.any? %>
                    <% if @talent.errors.messages.has_key?(:birth_month) %>
                      <% @talent.errors.messages[:birth_month].each do |message| %><p class="error"><%= message %></p><% end %>
                    <% end %>
                    <% if @talent.errors.messages.has_key?(:birth_day) %>
                      <% @talent.errors.messages[:birth_day].each do |message| %><p class="error"><%= message %></p><% end %>
                    <% end %>
                  <% end %>
            </td>
        </tr>
        <tr>
            <th scope="row"><span>※</span>出身地</th>
            <td>
                <%= f.select :prefecture_id, @prefecture_list.invert, {id: 'prefecture_id-id', include_blank: ''} %>
                <% @talent.errors.messages[:prefecture_id].each do |message| %><p class="error"><%= message %></p><% end %>
            </td>
        </tr>
        <tr>
            <th scope="row">出身地（その他）</th>
            <td>
                <div class="input text"><%= f.text_field :hometown, size: 50, id: 'hometown', class: 'wide' %></div>
                <% @talent.errors.messages[:hometown].each do |message| %><p class="error"><%= message %></p><% end %>
            </td>
        </tr>
        <tr>
            <th scope="row">特技・趣味</th>
            <td>
                <div class="input textarea"><%= f.text_area :hobby, cols: 45, rows: 6, id: 'hobby', class: 'wide' %></div>
                <% @talent.errors.messages[:hobby].each do |message| %><p class="error"><%= message %></p><% end %>
            </td>
        </tr>
        <tr>
            <th scope="row">SNS（ホームページ）</th>
            <td>
                <div class="input text"><%= f.text_field :url_hp, size: 50, id: 'url_hp', class: 'wide' %></div>
                <% @talent.errors.messages[:url_hp].each do |message| %><p class="error"><%= message %></p><% end %>
            </td>
        </tr>
        <tr>
            <th scope="row">SNS（Blog）</th>
            <td>
                <div class="input text"><%= f.text_field :url_blog, size: 50, id: 'url_blog', class: 'wide' %></div>
                <% @talent.errors.messages[:url_blog].each do |message| %><p class="error"><%= message %></p><% end %>
            </td>
        </tr>
        <tr>
            <th scope="row">SNS（Twitter）</th>
            <td>
                <div class="input text"><%= f.text_field :url_tw, size: 50, id: 'url_tw', class: 'wide' %></div>
                <% @talent.errors.messages[:url_tw].each do |message| %><p class="error"><%= message %></p><% end %>
            </td>
        </tr>
        <tr>
            <th scope="row">SNS（Facebook）</th>
            <td>
                <div class="input text"><%= f.text_field :url_fb, size: 50, id: 'url_fb', class: 'wide' %></div>
                <% @talent.errors.messages[:url_fb].each do |message| %><p class="error"><%= message %></p><% end %>
            </td>
        </tr>
        <tr>
            <th scope="row">SNS（Instagram）</th>
            <td>
                <div class="input text"><%= f.text_field :url_ins, size: 50, id: 'url_ins', class: 'wide' %></div>
                <% @talent.errors.messages[:url_ins].each do |message| %><p class="error"><%= message %></p><% end %>
            </td>
        </tr>
        <tr>
            <th scope="row"><span>※</span>写真1</th>
            <td>
                <div class="input file"><%= f.file_field :image1, size: 50, id: 'image1', class: 'wide' %></div>
                <% @talent.errors.messages[:image1].each do |message| %><p class="error"><%= message %></p><% end %>
            </td>
        </tr>
        <tr>
            <th scope="row">写真２</th>
            <td>
                <div class="input file"><%= f.file_field :image2, size: 50, id: 'image2', class: 'wide' %></div>
                <% @talent.errors.messages[:image2].each do |message| %><p class="error"><%= message %></p><% end %>
            </td>
        </tr>
<%

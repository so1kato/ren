%>
        <tr>
            <th scope="row">代表作</th>
            <td>
                <div class="input textarea"><%= f.text_area :masterpiece, cols: 45, rows: 6, id: 'masterpiece', class: 'wide' %></div>
                <% @talent.errors.messages[:masterpiece].each do |message| %><p class="error"><%= message %></p><% end %>
            </td>
        </tr>
    </table>
    <p class="btn_add">
        <input name="save" type="image" src="/admin/img/btn_reg.png" alt="登録">
    </p>
    <% end %>
